{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"performance": {
				"noDelete": "off"
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useTemplate": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"files": {
		"ignore": ["**/build/**", "**/package.json"]
	}
}
